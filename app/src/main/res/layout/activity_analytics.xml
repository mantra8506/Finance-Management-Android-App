<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Section for Total Expenses and Total Investments -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTotalExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Expenses: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTotalInvestments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Investments: "
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Detailed Expense and Investment Breakdown -->
    <TextView
        android:id="@+id/tvExpenseDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Expense Breakdown: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvInvestmentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Investment Breakdown: "
        android:textSize="16sp" />

    <!-- Custom Pie Chart to represent analytics -->
    <com.example.financemanagement.PieChartView
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"/>

    <!-- Button to update the analytics -->
    <Button
        android:id="@+id/btnUpdateAnalytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Update Analytics" />
</LinearLayout>